  <script>
    function enviar() {
      let n1 = document.getElementById('nome1').value.trim();
      let n2 = document.getElementById('nome2').value.trim();
      let casal = document.getElementById('casal').value.trim();
      let mesa = document.getElementById('mesa').value.trim();
      let entrada = document.getElementById('entrada').value;
      let prato = document.getElementById('prato').value;
      let bebidas = Array.from(document.querySelectorAll('.bebida:checked')).map(e=>e.value);
      let extras = Array.from(document.querySelectorAll('.extra:checked')).map(e=>e.value);
      if(!n1||!n2||!casal||!mesa) return alert('Preencha todos os campos!');
      if(bebidas.length>2) return alert('No mÃ¡ximo 2 bebidas.');
      let msg = `Pedido do Casal: ${casal}%0AMesa: ${mesa}%0AEntrada: ${entrada}%0APrato: ${prato}%0ABebidas (incluÃ­das): ${bebidas.join(', ')}%0A`;
      if(extras.length) msg += `Extras: ${extras.join(', ')}%0A`;
      const nums = ['5511953461060','5511982839879'];
      nums.forEach(n=>window.open(`https://api.whatsapp.com/send?phone=${n}&text=${msg}`, '_blank'));
    }
  </script>
